@(Html.Kendo().Window()
	.Name("FormCapquyenxemVBDen")
	.Draggable()
	.AutoFocus(true)
	.Modal(true)
	.Title("Cấp quyền xem văn bản")
	//.Resizable()
	.Width(450)
	.Height(500)
	.Visible(false)
	.Actions(actions => actions.Close())
	.Content(
	@<text>	
			
			<div id="chitietcapquyenxemVBDen">

			</div>
		
	</text>
	)
)

<script type="text/javascript">
	function CloseViewCapquyenxemVBDen() {
		var window = $("#FormCapquyenxemVBDen").data("kendoWindow");
		window.close();
	}
	function OpenViewCapquyenxemVBDen(idvanban) {
	    LoadCapquyenxem(idvanban);
		var window = $("#FormCapquyenxemVBDen").data("kendoWindow");
		window.center();
		window.open();
	}
	function LoadCapquyenxem(idvanban) {
		var url = '@Url.Action("_ListUserCapquyenxem", "Vanbanden")';
		url = url + "?idvanban=" + idvanban;
		$('#chitietcapquyenxemVBDen').load(url);
	}
	
</script>
