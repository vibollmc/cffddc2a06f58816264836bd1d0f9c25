@model QLVB.DTO.Sovb.ListLoaivanbanViewModel


<div class="box">
    <header>
        <nav style="padding: 3px;">
            <button id="submitloaivbbtn" type="button" class="btn btn-sm btn-primary btn-flat " data-original-title="" title=""><i class="glyphicon glyphicon-floppy-saved"></i>&nbsp;Ghi nhận</button>
            <span id="ketqualoaivb" class="validation-summary-valid"></span>
        </nav>
    </header>

    <form class="form-horizontal" id="formAjaxLoaivb">
        @Html.HiddenFor(m => m.idsovb)
        <div class="body collapse in">
            <table id="listkhoiph" class="table responsive-table">
                <thead>
                    <tr>
                        <td style="width:10%; text-align:center">
                            <b>Chọn</b>
                        </td>
                        <td style="width:90%;">
                            <b>Loại văn bản</b>
                        </td>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var p in Model.Loaivanban)
                    {
                        <tr>
                            <td style="width:10%; text-align:center">
                                @Html.CheckBox(p.intid.ToString(), p.IsDefault)
                            </td>
                            <td style="width:90%">
                                @Html.Label(p.strtenloaivanban, new { @class = "font-label" })
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </form>
</div>
<script type="text/javascript">
    $("#submitloaivbbtn").click(function () {
        $.ajax({
            type: "POST",
            url: '@Url.Action("SaveLoaivb", "Sovb")',
            data: $("#formAjaxLoaivb").serialize(),
            success: function (data) {
                if (data == 1) {
                    ShowResult("ketqualoaivb", "Cập nhật thành công");
                }
                else {
                    ShowResult("ketqualoaivb", "Lỗi !!!");
                }
            },
            dataType: "Json"
        });
    });
</script>