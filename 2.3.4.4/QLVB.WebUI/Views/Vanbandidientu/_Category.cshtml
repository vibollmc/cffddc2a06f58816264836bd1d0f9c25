
@(
 Html.Kendo().TreeView()
    .Name("treeview")
    .Events(events => events.Select("onSelect_treeview"))
    .ExpandAll(false)
    .Items(item =>
    {        
        item.Add()
        .Text("Ngày nhận")
        .Id("parentNode")
        .Items(subItem =>
        {
            for (int d = 0; d < ViewBag.Songayhienthi; d++)
            {
                subItem.Add()
                    .Text(QLVB.Common.Date.DateServices.FormatDateVNCategory(DateTime.Now, d))
                    .Id("strngaynhancat=" + QLVB.Common.Date.DateServices.FormatDateVNCategory(DateTime.Now, d))
                    ;
            }
        });
        item.Add()
        .Text("Ngày ký")
        .Id("parentNode")
        .Items(subItem =>
        {
            for (int d = 0; d < ViewBag.Songayhienthi; d++)
            {
                subItem.Add()
                    .Text(QLVB.Common.Date.DateServices.FormatDateVNCategory(DateTime.Now, d))
                    .Id("strngaykycat=" + QLVB.Common.Date.DateServices.FormatDateVNCategory(DateTime.Now, d))
                    ;
            }
        });

    })
)
<script type="text/javascript">
    $(window).resize(function () {
        SetTreeViewHeight();
    });
    $(document).ready(function () {
        SetTreeViewHeight();
    })
    function onSelect_treeview(e) {
        var treeview = $("#treeview").getKendoTreeView();
        var text = treeview.dataItem(e.node).text;
        var id = treeview.dataItem(e.node).id;
        if (id != "parentNode") {
            var url = '@Url.Action("_ListVanbandidientu", "Vanbandidientu")';
            url = url + '?' + id;
            $('#listvanbandi').load(url);
        } else {
            treeview.collapse('.k-item');
            treeview.expand(treeview.findByText(text));
        }
    }
    
</script>
