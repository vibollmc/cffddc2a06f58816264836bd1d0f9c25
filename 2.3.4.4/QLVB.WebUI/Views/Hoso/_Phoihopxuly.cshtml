<script type="text/javascript">
	$('#ClosePhoihopxulybtn').click(function () {
		CloseViewPhoihopxuly();
	});
	$("#SubmitPhoihopxulybtn").click(function () {
		$.ajax(
		{
			type: "POST",
			url: '@Url.Action("_SavePhoihopxuly", "Hoso")',
		    data: $("#formAddPhoihopxuly").serialize(),
			success: function (data) {
				if (data == 1) {
				    CloseViewPhoihopxuly();
				    // reload canbo xuly hoso
				    ReloadCanboxuly();
				    ReloadThongtinxuly();
				}
				else {
				    SetThongbao("Lỗi!!!");
				}
			},
			dataType: "Json"
		});
	});
	
</script>


