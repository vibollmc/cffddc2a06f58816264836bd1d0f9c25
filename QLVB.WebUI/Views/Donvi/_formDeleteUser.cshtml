@model QLVB.DTO.Donvi.DeleteUserViewModel

<div class="modal-body">
    Bạn có muốn xóa cán bộ: @Model.strhoten không?
</div>
<div class="modal-footer">
    <button id="SubmitDeleteUserbtn" type="button" class="btn btn-sm btn-primary btn-flat " data-original-title="" title=""><i class="glyphicon glyphicon-floppy-saved"></i>&nbsp;Đồng ý</button>
    <button id="Backbtn" type="button" class="btn btn-sm btn-primary btn-flat " data-original-title="" title=""><i class="glyphicon glyphicon-arrow-left"></i>&nbsp;Bỏ qua</button>
</div>

<script type="text/javascript">
    $("#Backbtn").bind("click", function () {
        CloseEditDonvi();
    })
    $('#SubmitDeleteUserbtn').click(function () {
        $.ajax({
            type: "POST",
            url: '@Url.Action("DeleteUser", "Donvi")',
            data: { id: "@Model.intid" },
            success: function (data) {
                if (data == 1) {
                    RefreshGrid();
                    CloseEditDonvi();
                }
                else {
                    CloseEditDonvi();
                    SetThongbao("Lỗi, không xóa được");
                }
            },
        });
    })
</script>

