@using System.Security.Claims
@using Microsoft.AspNet.Identity
@{
    var identity = User.Identity as ClaimsIdentity;
}
@if (identity.IsAuthenticated)
{
    using (Html.BeginForm("Logout", "Account", FormMethod.Post, new { id = "logoutForm" }))
    {

        <ul class="nav navbar-nav navbar-right">
            @{
                var userName = identity.Claims.FirstOrDefault(x => x.Type == ClaimTypes.GivenName).Value;
            }
            <li style="font-weight: bold">
                @Html.ActionLink("Xin chào " + userName + "!", "Manage", "Account", routeValues: null, htmlAttributes: new {title = "Manage"})
            </li>
            <li><a href="javascript:document.getElementById('logoutForm').submit()">Thoát</a></li>
        </ul>
    }
}
else
{
    <ul class="nav navbar-nav navbar-right">
        <li>@Html.ActionLink("Log in", "Login", "Account", routeValues: null, htmlAttributes: new { id = "loginLink" })</li>
    </ul>
}
